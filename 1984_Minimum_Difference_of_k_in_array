import java.util.*;

class Solution {
    public int minimumDifference(int[] nums, int k) {
        if (nums.length == 1) {
            return 0;
        }
        Arrays.sort(nums);
        int i = 0;
        int j = k - 1;
        int mindiff = nums[nums.length - 1];
        
        while (j < nums.length) {
            mindiff = Math.min(nums[j] - nums[i], mindiff);
            i++;
            j++;
        }
        return mindiff;
    }
}
